        <% if (user) { %>
          <form action="/logout" method="post">
            <button type="submit" class="btn btn-sm btn-info">Logout</button>
          </form>
        <% } else { %>
          <div>
            <a href="/login" class="btn btn-sm btn-outline-success">Login</a>
            <a href="/register" class="btn btn-sm btn-outline-warning">Register</a>
          </div> 
        <% } %>
      </nav>

      <div class="brand">
        <h1>Share Your Telant With The World</h1>
        <hr class="my-4">
        <a href="/resources" class="btn btn-lg btn-success"><i class="fas fa-user-graduate"></i> View All Resources</a>
